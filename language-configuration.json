{
    "comments": {
      "blockComment": ["{{--", "--}}"]
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["{{", "}}"],
      ["{!!", "!!}"]
    ],
    "autoClosingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["\"", "\""],
      ["'", "'"],
      ["{{", "}}"],
      ["{!!", "!!}"],
      ["{{--", "--}}"]
    ],
    "surroundingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["\"", "\""],
      ["'", "'"],
      ["{{", "}}"],
      ["{!!", "!!}"],
      ["{{--", "--}}"]
